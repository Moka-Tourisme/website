<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="website_sale_geonames" model="ir.ui.view">
        <field name="name">website.sale.geonames</field>

        <field name="inherit_id" ref="website_sale.address"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('w-100')][3]" position="after">
                <div t-attf-class="form-group #{error.get('zip_id') and 'o_has_error' or ''} col-lg-12 div_geonames">
                    <label for="zip_id">Location Completion</label>
                    <select name="zip_id"
                           t-attf-class="form-control zip_id #{error.get('zip_id') and 'is-invalid' or ''}"
                           data-init="1">
                    </select>
                </div>
                <div class="w-100"/>
            </xpath>
        </field>
    </record>
</odoo>
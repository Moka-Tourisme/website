<?xml version="1.0" ?>
<odoo>
    <data>
        <template id="slide_content_detailled_inherit" name="Slide Content Detailed Inherit"
                  inherit_id="website_slides.slide_content_detailed">
            <xpath expr="//i[hasclass('fa-desktop')]/ancestor::a[hasclass('btn-light')]" position="replace">
                <a t-if="slide.slide_type != 'audio'" class="btn btn-light border ml-2" role="button"
                   t-att-href="'/slides/slide/%s?fullscreen=1' % (slug(slide))">
                    <i class="fa fa-desktop mr-2"/>
                    <span class="d-none d-sm-inline-block">Fullscreen</span>
                </a>
            </xpath>
            <xpath expr="//div[hasclass('o_wslides_lesson_content_type')]" position="inside">
                <div t-if="slide.slide_type == 'audio'" class="bg-white p-3">
                    <section
                            class="s_cover bg-black-50 pt96 pb96 o_colored_level s_parallax_no_overflow_hidden oe_img_bg o_bg_img_center"
                            data-scroll-background-ratio="0" data-snippet="s_cover"
                            t-att-style="'background-image:url(\'/web/content/slide.slide/%s/image_1920/\')' % slide.id"
                            data-gl-filter="blur">
                        <div class="o_we_bg_filter bg-black-50"></div>
                        <div class="s_allow_columns container" data-original-title="" title="">
                            <div class="row">
                                <div class="o_colored_level col-lg-10 offset-lg-1">
                                    <h1 style="text-align: center;" t-esc="slide.name">
                                        <font style="font-size: 62px; font-weight: bold;"></font>
                                    </h1>
                                    <p class="lead" style="text-align: center;" data-original-title="" title=""
                                       aria-describedby="tooltip559572">
                                        <t t-out="slide.audio_embed_code"/>
                                    </p>
                                    <p style="text-align: center;" data-original-title="" title=""
                                       aria-describedby="tooltip473850">
                                        <a t-if="slide.datas"
                                           t-att-href="'/web/content/slide.slide/%s/audio_file?download=true' % slide.id">
                                            <button class="btn btn-primary"><i class="fa fa-file-audio-o"/>Download
                                                audio file
                                            </button>
                                        </a>
                                        <a t-if="slide.datas"
                                           t-att-href="'/web/content/slide.slide/%s/datas' % slide.id"
                                           target="_blank">
                                            <button class="btn btn-primary"><i class="fa fa-file-pdf-o"/>Open the file
                                            </button>
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div t-field="slide.html_content"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>

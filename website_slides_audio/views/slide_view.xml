<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_slide_slide_form_inherit">
            <field name="name">View Slide Form Inherit</field>
            <field name="model">slide.slide</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='datas']" position="replace">
                    <field name="datas" string="Attachment" attrs="{'invisible': [('slide_type', 'not in', ('document', 'presentation', 'audio'))]}"/>
                    <field string="Audio File" name="audio_file" attrs="{'invisible': [('slide_type', 'not in', ('audio'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>




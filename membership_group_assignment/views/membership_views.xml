<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="membership_res_partner_form_inherit">
            <field name="name">Res Partner Membership view inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='member_lines']" position="replace">
                    <field name="member_lines" nolabel="1" colspan="4">
                        <tree string="Memberships" create="false" delete="false" editable="top">
                            <field name="date" readonly="1"/>
                            <field name="membership_id" readonly="1"/>
                            <field name="group_ids" widget="many2many_tags" />
                            <field name="user_id" widget="many2one"/>
                            <field name="member_price" readonly="1"/>
                            <field name="account_invoice_id" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>